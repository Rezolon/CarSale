        <PasswordBox x:Name="textBoxPassword" Password="" HorizontalAlignment="Left" Margin="105,185,0,0" VerticalAlignment="Top" Width="200" Height="23" BorderBrush="#FF026EC3"/>
        <TextBox x:Name="textBoxPasswordShow" HorizontalAlignment="Left" Height="23" Margin="105,185,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200" Visibility="Collapsed"/>

    </Grid>
</Window>
