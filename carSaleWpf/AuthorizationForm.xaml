        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:carSaleWpf"
        mc:Ignorable="d" Height="358.583" Width="500.817" ResizeMode="CanMinimize" Title="Authorization" Icon="logo.png">
    <Grid Margin="0,0,2,1">
        <Grid.ColumnDefinitions>

        </Grid.ColumnDefinitions>
        <Label Content="АВТОРИЗАЦИЯ" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="151,22,0,0" Height="36" Width="164" FontWeight="Bold" FontSize="18"/>
        <TextBox x:Name="textBoxLogin" Text="" HorizontalAlignment="Left" Height="23" Margin="105,111,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200" BorderBrush="#FF026EC3"/>
        <Label Content="Логин:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="105,80,0,0" Height="26" Width="95"/>
        <Label Content="Пароль:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="105,154,0,0" Height="26" Width="95"/>
